<div id="home">

	<div class="left">
	<% @blogposts['post'].each do |@post| %>
		<%= render :partial => 'blog/post' %>
	<% end %>
	</div>
	
	<div class="right">
	<div class="title" id="top">New Album</div>
	<div class="topspin-widget topspin-widget-bundle-widget">
		<object type="application/x-shockwave-flash" height="250" width="240" id="TSWidget25266" data="http://cdn.topspin.net/widgets/bundle/swf/TSBundleWidget.swf?timestamp=1275964831" bgColor="#000000">
			<param value="always" name="allowScriptAccess" />
			<param name="quality" value="high" />
			<param name="movie" value="http://cdn.topspin.net/widgets/bundle/swf/TSBundleWidget.swf?timestamp=1275964831" />
			<param name="flashvars" value="widget_id=http://cdn.topspin.net/api/v1/artist/2478/bundle_widget/25266?timestamp=1275964831&amp;theme=white&amp;highlightColor=0xCC033C&amp;displayCTAButton=false&amp;smoothing=true" />
			<param name="wmode" value="transparent" />
		</object>
	</div><br>
	<div class="topspin-widget topspin-widget-email-for-media"><object type="application/x-shockwave-flash" height="80" width="240" id="TSWidget24920" data="http://cdn.topspin.net/widgets/email2/swf/TSEmailMediaWidget.swf?timestamp=1276025190" bgColor="#000000">  <param value="always" name="allowScriptAccess" />  <param name="allowfullscreen" value="true" />  <param name="quality" value="high" />  <param name="movie" value="http://cdn.topspin.net/widgets/email2/swf/TSEmailMediaWidget.swf?timestamp=1276025190" />  <param name="flashvars" value="widget_id=http://cdn.topspin.net/api/v1/artist/2478/email_for_media/24920?timestamp=1276025190&amp;theme=white&amp;highlightColor=0x000000&amp;hideinfo=true" /></object></div>    
	<p><%= link_to "More info on the album", @latest_release %></p>
	<p><%= @latest_release.buy_buttons %></p>

	<div class="title">Upcoming Shows</div>
	<% for show in @shows do %>
	<p><strong><%= link_to show.venue, show %></strong><br />
	<span class="meta-line"><%= show.date.strftime('%b %d') %>
	<span class="meta"><%= "#{show.city}, #{show.region}" %></span></span></p>
	<% end %>
		
	<div class="title">Active Forum Topics</div>
	<% for topic in @topics do %>
	<p><strong><%= link_to topic.title, topic %></strong><br />
	<span class="meta-line"><%= image_tag topic.posts.last.user.avatar.url(:tiny), :class => "mini-avatar" %>
	<%= topic.posts.last.user.login %> 
	<span class="meta"><a href="<%= topic_path(topic, :anchor => topic.posts.last.id) %>"><%= time_ago_in_words(topic.posts.last.created_at) %> ago</a></span></span></p>
	<% end %>
	
	<div class="title">Latest Show Posts</div>
	<% for postedshow in @postedshows do %>
	<p><strong><%= link_to postedshow.venue, postedshow %></strong><br />
	<span class="meta-line"><%= image_tag postedshow.posts.last.user.avatar.url(:tiny), :class => "mini-avatar" %>
	<%= postedshow.posts.last.user.login %> 
	<span class="meta"><%= time_ago_in_words(postedshow.posts.last.created_at) %> ago</span></span></p>
	<% end %>
	</div>
	</div>

</div>