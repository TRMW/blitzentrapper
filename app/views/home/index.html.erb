<div class="home">
  <div class="home__content">
    <%= render partial: "blog/post", collection: @blogposts %>

    <ul class="home__blog-footer">
      <% unless @lastpage %>
        <li>
          <%= link_to "Next page", page_path(:page => 1) %>
        </li>
      <% end %>
      <li>
        <a href="http://feeds.feedburner.com/blitzentrapper">Subscribe to our RSS Feed &rarr;</a>
      </li>
      <li>
        <a href="http://tumblr.com/follow/blitzentrapper/">Follow us on Tumblr &rarr;</a>
      </li>
    </ul>
  </div>

  <aside class="home__sidebar">
    <div class="home__sidebar__section">
      <h2>Holy Smokes <br>Future Jokes</h2>
      <a href="https://yeproc.11spot.com/blitzen-trapper-holy-smokes-future-jokes.html"><%= image_tag "BlitzenTrapper_HolySmokesFutureJokes_COVER-350x350.jpg" %></a>
      <p><strong><a href="https://yeproc.11spot.com/blitzen-trapper-holy-smokes-future-jokes.html">Out 9/11/2020</a></strong></p>
    </div>

    <% if !@shows.empty? %>
      <div class="home__sidebar__section">
        <h2>Upcoming Shows</h2>
        <ul>
          <% for show in @shows do %>
            <li class="home__sidebar__list-item">
              <div>
                <strong><%= link_to show.venue, show %></strong>
              </div>
              <div class="home__sidebar__meta-line">
                <%= show.date.strftime('%b %d') %>
                <span class="meta"><%= "#{show.city}, #{show.region}" %></span>
              </div>
            </li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="home__sidebar__section">
      <h2>Follow Us</h2>
      <ul>
        <li><a href="http://facebook.com/blitzentrapper" target="_blank">Facebook</a></li>
        <li><a href="http://twitter.com/blitzentrapper" target="_blank">Twitter</a></li>
        <li><a href="http://instagram.com/blitzentrapper" target="_blank">Instagram</a></li>
        <li><a href="http://youtube.com/blitzentrappa" target="_blank">YouTube</a></li>
        <li><a href="http://soundcloud.com/blitzen-trapper" target="_blank">Soundcloud</a></li>
        <li><a href="http://blitzentrapper.tumblr.com" target="_blank">Tumblr</a></li>
        <li><a href="http://feeds.feedburner.com/blitzentrapper" target="_blank">RSS</a></li>
      </ul>
    </div>

    <div class="home__sidebar__section">
      <h2>Active Topics</h2>
      <ul>
        <% for topic in @topics do %>
          <li class="home__sidebar__list-item">
            <div>
              <strong><%= link_to topic.title, topic %></strong>
            </div>
            <div class="home__sidebar__meta-line">
              <%= avatar_image(topic.posts.last.user, :tiny) %>
              <%= topic.posts.last.user.login %>
              <span class="meta"><a href="<%= topic_path(topic, :anchor => topic.posts.last.id) %>"><%= time_ago_in_words(topic.posts.last.created_at) %> ago</a></span>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="home__sidebar__section">
      <h2>Latest Show Posts</h2>
      <ul>
        <% for postedshow in @postedshows do %>
          <li class="home__sidebar__list-item">
            <div>
              <strong><%= link_to postedshow.venue, postedshow %></strong>
            </div>
            <div class="home__sidebar__meta-line">
              <%= avatar_image(postedshow.posts.last.user, :tiny) %>
              <%= postedshow.posts.last.user.login %>
              <span class="meta"><%= time_ago_in_words(postedshow.posts.last.created_at) %> ago</span>
            </div>
          </li>
        <% end %>
      </ul>
    </div>

    <div class="home__sidebar__section">
      <h2>Tweets</h2>
      <a class="twitter-timeline" href="https://twitter.com/BlitzenTrapper" data-widget-id="308010139070373888">Tweets by @BlitzenTrapper</a>
      <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>
    </div>

    <div class="home__sidebar__section">
      <h2>Mailing List</h2>
      <!-- Begin MailChimp Signup Form -->
      <div id="mc_embed_signup" class="list-signup">
        <form action="//blitzentrapper.us16.list-manage.com/subscribe/post?u=ab5b797279f9a4a7d3adc43cc&amp;id=fcb7f3b5e6" method="post" id="mc-embedded-subscribe-form" name="mc-embedded-subscribe-form" class="validate home__sidebar__list-signup-form" target="_blank" novalidate>
