<% title "Shows" %>

<table>
  <tr>
    <th>City</th>
    <th>Date</th>
    <th>Venue</th>
    <th>Ticket Link</th>
  </tr>
  <% for show in @shows	 %>
    <tr>
      <td><%=h show.city %></td>
      <td>
      <%=h show.date %>
      <% if show.enddate? %>
      <%= " - #{show.enddate}" %>
      <% end %>
      </td>
      <td><%=h show.venue %></td>
      <td>
      <% if show.status == "available" %>
      <%= link_to "buy tickets", show.ticket_link %>
      <% else %>
      <%= link_to "crappy link", show.ticket_link %>
      <% end %>
      </td>
      <td><%= link_to "Show", show %></td>
      <td><%= link_to "Edit", edit_show_path(show) %></td>
      <td><%= link_to "Destroy", show, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Show", new_show_path %></p>
