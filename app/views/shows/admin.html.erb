<table>
<% for show in @shows do %>
<tr>
<td><%= show.date %></td>
<td><strong><%= link_to show.venue, show %></strong></td>
<td><%= show.city + ', ' + show.region %></td>
<td><%= link_to 'Edit', edit_show_path(show) %> <%= link_to 'Destroy', show, :confirm => 'Are you sure?', :method => :delete %></td>
</tr>
<% end %>
</table>