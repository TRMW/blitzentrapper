<% title "Login" %>

<div class="narrow-content">
<h1>Login</h1>

<%= form_for @user_session, :url => user_session_path, :html => { :class => "chunky-form"} do |f| %>
  <%= f.error_messages %>
  <%= f.label :Username %>
  <%= f.text_field :login %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  
  <div class="checkbox-line"><%= f.check_box :remember_me %><%= f.label :remember_me %></div>

  <%= f.submit "Login", :class => "button" %>
<% end %>
</div>