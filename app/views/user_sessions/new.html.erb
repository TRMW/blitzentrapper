<% title "Login" %>

<h1>Login</h1>

<%= form_for @user_session, :url => user_session_path do |f| %>
  <%= render 'shared/error_messages', :object => @user_session %>

  <%= f.label :login, "Username" %>
  <%= f.text_field :login %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <div>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </div>

  <%= f.submit "Login", :class => "button" %>
<% end %>
