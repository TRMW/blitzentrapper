	<%= form_for @topic, :html => { :class => "chunky-form"} do |f| %>
	  <%= f.error_messages %>
	  <%= f.label :Subject %>
	  <%= f.text_field :title %>
	  <% f.fields_for :posts do |post| %>
	    <%= post.text_area :body, :class => "mceEditor" %>
	    <%= post.hidden_field :user_id, :value => current_user.id %>
	  <% end %>
	<%= f.submit "Post Topic", :class => "button" %>
	<% end %>