<%= form_for @topic, :html => { :class => "chunky-form"} do |f| %>
  <%= f.error_messages %>
  <%= f.label :Subject %>
  <%= f.text_field :title %>
  <%= f.fields_for @topic.posts.first do |post| %>
    <%= post.hidden_field :body, :id => "post-body-input" %>
    <trix-editor input="post-body-input"></trix-editor>
    <%= post.hidden_field :user_id, :value => current_user.id %>
  <% end %>
<%= f.submit "Post Topic", :class => "button" %>
<% end %>
