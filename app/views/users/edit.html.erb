<% title "Edit Your Account" %>

<h1>Edit Your Account</h1>

<p>&larr; <%= link_to "View Profile", user_path(current_user) %></p>

<%= form_for @user, :html => { :multipart => true } do |f| %>
	<%= f.error_messages %>
	<%= render :partial => "form", :object => f %>
	<%= f.submit "Update", :class => "button" %>
<% end %>
