<% title @user.login %>

<div class="userleft">
<% if current_user && current_user.oauth2_token? %>
	<%= image_tag 'https://graph.facebook.com/' + @user.fbid + '/picture?type=large', :width => "115px" %>
<% else %>
	<%= image_tag @user.avatar.url %>
<% end %>

<% if @user == current_user %>
<%= link_to "Edit Account", account_path, :class => "profile-link" %> &rarr;
<% end %>
</div>

<div class="userright">
<h2><%= @user.login %></h2>

<% if @user.url? %>
<p><%= link_to @user.url, @user.url %></p>
<% end %>

<p class="usermeta">
<%= user_tagline %>
</p>

<% if @user.interests? %>
<p>Ask me about <strong><%= @user.interests %></strong></p>
<% end %>

<%- for post in @user.posts do -%>

<p>
<strong><%= title_or_venue(post) %></strong>

<em class="postmeta">
<%- if post.postable.posts.first == post -%>
started topic <%= time_ago_in_words(post.created_at) %> ago</em> <span class="first">first!</span>
<%- else -%>
posted <%= time_ago_in_words(post.created_at) %> ago
<%- end -%>
</em>
</p>

<%- end -%>

</div>