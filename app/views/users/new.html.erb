<% title "Register" %>

<div class="narrow-content">
	<h1>Register</h1>
	
	<%= form_for @user, :url => users_path, :html => { :multipart => true, :class => "chunky-form" } do |f| %>
	  <%= f.error_messages %>
	  <%= render :partial => "form", :object => f %>
	  <%= f.submit "Register", :class => "button" %>
	<% end %>
</div>