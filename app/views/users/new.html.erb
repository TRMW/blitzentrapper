<% title "Register" %>

<div id="user-form">
<h1>Register</h1>

<% form_for @user, :url => users_path do |f| %>
	<%= oauth2_register_button :value => "Register using Facebook" %>
<% end %>

<% form_for @user, :url => users_path, :html => { :multipart => true } do |f| %>
  <%= f.error_messages %>
  <%= render :partial => "form", :object => f %>
  <%= f.submit "Register", :class => "button" %>
<% end %>
</div>