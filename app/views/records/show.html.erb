<% title @record.title %>

<% if @record.id == 6 %>
	<%- content_for :head do -%>
	<meta property="fb:admins" content="100001588148513" />
	<meta property="fb:page_id" content="19099288648" />
	<meta property="og:title" content="Destroyer of the Void by Blitzen Trapper"/>
	<meta property="og:type" content="album"/>
	<meta property="og:url" content="http://blitzentrapper.net/records/destroyer-of-the-void"/>
	<meta property="og:site_name" content="blitzentrapper.net"/>
	<meta property="og:image" content="http://files.blitzentrapper.net/covers/destroyer-of-the-void/big.jpg"/>
	<meta property="og:description" content="The fifth album by Portland, Oregon rock band Blitzen Trapper."/>
	<%- end -%>
<%- end -%>

<div class="record-show">

<div class="left">
	<%= image_tag @record.cover.url(:big) %>
	<%= @record.player %>
</div>

<div class="right">
	<h2><%=h @record.title %></h2>
	<span class="recordmeta">
	<strong><%=h @record.release_date.strftime('%B %d, %Y') %></strong>
	<%=h @record.label %>
	
	<span class="buy-buttons"><%= @record.buy_buttons %></span>
	</span>
	
	<div class="description"><%= @record.description %></div>
	
	<strong>Songs</strong>
	<ol>
	<%- for song in @record.songs -%>
		<li><%= song.title %></li>
	<%- end -%>
	</ol>
</div>

</div>
