<% title "Records" %>

<table>
  <tr>
    <th>Title</th>
    <th>Release Date</th>
    <th>Label</th>
    <th>Edition</th>
  </tr>
  <% for record in @records %>
    <tr>
      <td><%=h record.title %></td>
      <td><%=h record.release_date %></td>
      <td><%=h record.label %></td>
      <td><%=h record.edition %></td>
      <td><%= link_to "Show", record %></td>
      <td><%= link_to "Edit", edit_record_path(record) %></td>
      <td><%= link_to "Destroy", record, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Record", new_record_path %></p>
