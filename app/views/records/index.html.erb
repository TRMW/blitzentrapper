<% title "Records" %>

<% for record in @records %>
<div class="<%= cycle("record", "record", "record last") %>">
	<%= link_to (image_tag 'covers/' + record.title.parameterize + '.jpg'), record %>
  <%= link_to record.title, record %>
  <em><%=h record.release_date.strftime('%Y') %></em>
</div>
<% end %>
